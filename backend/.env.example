# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
ALLOWED_TELEGRAM_USERS=123456789,987654321  # Telegram user IDs (comma separated)
ADMIN_TELEGRAM_USERS=123456789  # Admin user IDs

# Webhook Configuration (Optional)
USE_WEBHOOK=false
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_PORT=3001
WEBHOOK_SECRET_PATH=/telegram-webhook

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token  # Optional, increases rate limit

# Security
SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds

# Rate Limiting
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=10

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_NO_SANDBOX=true  # Required for some environments

# Server Configuration
TELEGRAM_BOT_PORT=3001